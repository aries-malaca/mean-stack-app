<%- contentFor('content') %>
<div class="container" ng-app="todoApp" ng-controller="TodoController"  ng-cloak>
    <h1>MEAN - TO-DO App</h1>
    <div class="row">
        <div class="col-sm-4">
            <form name="myForm">
                <div class="form-group">
                    <label>Title</label>
                    <input required type="text" class="form-control" ng-model="title" />
                </div>
                <div class="form-group">
                    <label>Notes</label>
                    <textarea class="form-control" ng-model="notes" required></textarea>
                </div>
                <div class="form-group">
                    <label>Deadline</label>
                    <input type="text" class="form-control" required ng-model="deadline" />
                </div>
                <button ng-disabled="!myForm.$valid" ng-show="button_mode=='add'" ng-click="addTask()" class="btn btn-block btn-info" type="button">Save</button>
                <div class="row" ng-show="button_mode=='edit'">
                    <div class="col-sm-6">
                        <button ng-click="clearFields()" class="btn btn-block btn-warning" type="button">Cancel</button>
                    </div>
                    <div class="col-sm-6">
                        <button ng-click="editTask()" class="btn btn-block btn-info" type="button">
                            Update
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-8">
            <h2>List</h2>
            <table class="table table-responsive table-striped table-hover table-bordered">
                <tr>
                    <th>Title</th>
                    <th>Notes</th>
                    <th>Deadline</th>
                    <th></th>
                </tr>
                <tr ng-repeat="(key,task) in tasks">
                    <td>{{ task.title }}</td>
                    <td>{{ task.notes }}</td>
                    <td>{{ task.deadline }}</td>
                    <td>
                        <button class="btn btn-sm btn-warning" ng-click="showTask(task)">Edit</button>
                        <button class="btn btn-sm btn-danger" ng-click="deleteTask(task._id)">x</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
